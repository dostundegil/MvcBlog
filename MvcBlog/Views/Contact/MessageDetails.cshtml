@model EntityLayer.Concrate.Contact
@{
    ViewBag.Title = "Admin | Mesaj Detayları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Mesaj Detayları</h1>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                @Html.Action("ContactPartialSide", "Contact")
                <!-- /.col -->
                <div class="col-md-9">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Mesaj Detayları</h3>
                            <div class="card-tools">
                                <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Previous">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                                <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Next">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body p-0">
                            <div class="mailbox-read-info">
                                <h4>Konu: <b>@Model.Subject</b></h4>
                                <br />
                                <h5>Gönderen: <b>@Model.Name @Model.SurName</b></h5>
                                <br />
                                <h6>
                                    Mail Adresi: @Html.DisplayTextFor(x => x.Mail) <span class="mailbox-read-time float-right">@(((DateTime)Model.MessageDate).ToString("dd-MMM-yyyy"))      </span>
                                </h6>
                            </div>
                            <div class="mailbox-read-message">
                                <p>@Model.Message</p>
                            </div>
                            <!-- /.mailbox-read-message -->
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <div class="float-right">
                                <button type="button" class="btn btn-default">
                                    <i class="fas fa-reply"></i> Yanıtla
                                </button>
                                <button type="button" class="btn btn-default">
                                    <i class="fas fa-share"></i> İlet
                                </button>
                            </div>
                            <button type="button" class="btn btn-default">
                                <i class="far fa-trash-alt"></i> Sil
                            </button>
                            <button type="button" class="btn btn-default">
                                <i class="fas fa-print"></i> Yazdır
                            </button>
                        </div>
                        <!-- /.card-footer -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    </section>
</body>
</html>