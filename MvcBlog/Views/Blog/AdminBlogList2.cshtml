@model IEnumerable<EntityLayer.Concrate.Blog>
@{
    ViewBag.Title = "Admin | Blog Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="card card-blue">
            <div class="card-header">
                <h3 class="card-title">Blog Listesi</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%"> ID </th>
                            <th style="width: 25%"> Blog Başlığı </th>
                            <th style="width: 20%"> Yazar </th>
                            <th style="width: 20%"> Beğeni Oranı </th>
                            <th style="width: 4%" class="text-center"> Kategori </th>
                            <th style="width: 30%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.BlogID </td>
                                <td>@item.BlogTitle</td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@item.Author.AuthorImage">
                                        </li>
                                        <li class="list-inline-item">@item.Author.AuthorName</li>
                                    </ul>
                                </td>
                                <td class="project_progress">
                                    <div class="progress progress-group">
                                        <progress class="progress-bar bg-light" style="width:100%" value="@item.BlogRating" max="10"></progress>
                                    </div><small>Aldığı Paun: @item.BlogRating</small>
                                </td>
                                <td class="project-state">
                                    <span class="badge badge-danger">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/blog/BlogDetails/@item.BlogID">
                                        <i class="fas fa-folder"></i> Sitede Gör
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/blog/UpdateBlog/@item.BlogID">
                                        <i class="fas fa-pencil-alt"></i> Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/blog/DeleteBlog/@item.BlogID">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</body>
</html>