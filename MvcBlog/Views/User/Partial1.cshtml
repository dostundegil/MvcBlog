@model IEnumerable<EntityLayer.Concrate.Author>
<div class="tab-pane" id="settings">
    @using (Html.BeginForm("UpdateUserProfile", "User", FormMethod.Post))
    {
        foreach (var item in Model)
        {
            <form class="form-horizontal">
                <div class="form-group row">
                    <input type="text" class="form-control" id="inputName" name="AuthorID" value="@item.AuthorID" hidden="hidden">
                    <label for="inputName" class="col-sm-2 col-form-label">Ad Soyad</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputName" name="AuthorName" value="@item.AuthorName">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail" class="col-sm-2 col-form-label">Mail Adresi</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="inputEmail" name="AuthorMail" value="@item.AuthorMail">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputName2" class="col-sm-2 col-form-label">Meslek</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputName2" name="AuthorTitle" value="@item.AuthorTitle">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputExperience" class="col-sm-2 col-form-label">Yetenekler</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputName2" name="AboutShrot" value="@item.AboutShrot">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputSkills" class="col-sm-2 col-form-label">Telefon Numarası</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputSkills" name="AuthorPhone"  value="@item.AuthorPhone">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputSkills" class="col-sm-2 col-form-label">Fotoğraf</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputSkills" name="AuthorImage" value="@item.AuthorImage">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputSkills" class="col-sm-2 col-form-label">Şifre</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputSkills" name="AuthorPassword" value="@item.AuthorPassword">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputSkills" class="col-sm-2 col-form-label">Hakkında</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputSkills" name="AuthorAbout" value="@item.AuthorAbout">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="offset-sm-2 col-sm-10">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> Şifremi değiştirmek istiyorum
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="offset-sm-2 col-sm-10">
                        <button type="submit" class="btn btn-danger">Bilgilerimi Güncelle</button>
                    </div>
                </div>
            </form>
        }
    }
</div>