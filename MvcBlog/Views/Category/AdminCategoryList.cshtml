@model IEnumerable<EntityLayer.Concrate.Category>
    @{
        ViewBag.Title = "Admin | Kategori Listesi";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    @{string color = "";}
    @{string durum = "";}
    <!DOCTYPE html>
    <html>
    <body class="hold-transition sidebar-mini">
        <section class="content">
            <div class="card card-blue">
                <div class="card-header">
                    <h3 class="card-title">Kategori Listesi</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th style="width: 1%"> ID </th>
                                <th style="width: 20%"> Kategori Adı </th>
                                <th style="width: 20%"> Son Blog </th>
                                <th> Kategori Bar </th>
                                <th style="width: 8%" class="text-center"> Durum </th>
                                <th style="width: 30%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var categoryid = item.CategoryID;
                                if (item.CategoryStatus)
                                {
                                    color = "badge badge-success";
                                    durum = "Aktif";
                                }
                                else
                                {
                                    color = "badge badge-danger";
                                    durum = "Pasif";
                                }
                                <tr>
                                    <td> @item.CategoryID </td>
                                    <td>@item.CategoryName</td>
                                    <td>
                                        <ul class="list-inline">
                                            <li class="list-inline-item">
                                                <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar.png">
                                            </li>
                                            <li class="list-inline-item">
                                                <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar2.png">
                                            </li>
                                            <li class="list-inline-item">
                                                <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar3.png">
                                            </li>
                                        </ul>
                                    </td>
                                    <td class="project_progress">
                                        <div class="progress progress-sm">
                                            <div class="progress-bar bg-green" role="progressbar" aria-volumenow="57" aria-volumemin="0" aria-volumemax="100" style="width: 57%"></div>
                                        </div>
                                        <small> 57% Complete </small>
                                    </td>
                                    <td class="project-state">
                                        <span class="@color">@durum</span>
                                    </td>
                                    <td class="project-actions text-right">
                                        <a class="btn btn-info btn-sm bg-gradient-info" href="/Category/CategoryEdit/@item.CategoryID">
                                            <i class="fas fa-pencil-alt"></i> Düzenle
                                        </a>
                                        <a class="btn btn-success btn-sm bg-gradient-success" href="/Category/CategoryStatusTrue/@item.CategoryID">
                                            <i class="fas fa-plus"></i> Aktif Yap
                                        </a>
                                        <a class="btn btn-danger btn-sm bg-gradient-danger" href="/Category/CategoryDelete/@item.CategoryID">
                                            <i class="fas fa-minus"></i> Pasif Yap
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
        <button class="btn btn-outline-primary" data-toggle="modal" data-target="#Modal1">Yeni Kategori Ekle</button>
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-gradient-blue d-flex justify-content-center">
                        <h1 class="modal-title">Yeni Kategori Ekle</h1>
                    </div>
                    <form method="post" action="/Category/AdminCategoryAdd/">
                        <div class="modal-body">
                            <label>Kategori Adı</label>
                            <input type="text" name="CategoryName" class="form-control" />
                            <br />
                            <label>Kategori Açıklama</label>
                            <input type="text" name="CategoryDescription" class="form-control" />
                            <br />
                            <button class="btn btn-outline-info">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
