@model EntityLayer.Concrate.Category
@{
    ViewBag.Title = "Admin | Kategori Düzenleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("CategoryEdit", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="card card-green">
            <div class="card-header">Kategori Güncelle</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm">
                        @Html.HiddenFor(x => x.CategoryID)
                        @Html.Label("Kategori Adı")
                        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x=>x.CategoryName, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-sm">
                        @Html.Label("Kategori Açıklaması")
                        @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.CategoryDescription,"" ,new { @class = "text-danger" })
                    </div>
                </div>

            </div>
        </div>
        <button class="btn btn-info">Güncelle</button>
        <a href="/Category/AdminCategoryList/" class="btn btn-danger">Vazgeç</a>
    </div>

}

